<p id="notice"><%= notice %></p>

<h1><%= @lottery.title %></h1>

<p>
  <b>Description:</b>
  <%= @lottery.description %>
</p>

<p>
  <b>Due at:</b>
  <%= @lottery.due_at %>
</p>

<h2>Contestants</h2>
<ul>
  <% @contestants.each do |user| %>
    <li><%= user.name %></li>
  <% end %>
</ul>
<p><%= link_to 'Add or remove', contestants_lottery_path( @lottery )%></p>

<% unless @lottery.prizes.empty? %>
  <h2>Prizes</h2>
  <ul>
    <% @lottery.prizes.each do |prize| %>
      <li><%= prize.name %> <%= link_to 'edit', edit_prize_path( prize ) %></li>
    <% end %>
  </ul>
<% end %>

<%= link_to 'Add new prizes', edit_lottery_path( @lottery ) %>

<p><%= link_to 'Edit lottery', edit_lottery_path(@lottery) %> |
<%= link_to 'All lotteries', lotteries_path %></p>
